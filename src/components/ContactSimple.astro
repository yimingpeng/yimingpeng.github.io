<style>
.contact {
	background: linear-gradient(135deg, #0d1117 0%, #161b22 50%, #0d1117 100%);
	position: relative;
	overflow: hidden;
}

.contact::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: radial-gradient(ellipse at center, rgba(137, 180, 250, 0.05) 0%, transparent 70%);
	pointer-events: none;
}

.contact-content {
	text-align: center;
	max-width: 1200px;
	margin: 0 auto;
	position: relative;
	z-index: 1;
}

.contact-header {
	margin-bottom: 2.5rem;
	position: relative;
}

.contact-title {
	font-size: 2.2rem;
	font-weight: 600;
	background: linear-gradient(135deg, #89b4fa 0%, #cba6f7 50%, #f9e2af 100%);
	background-clip: text;
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	color: #89b4fa;
	margin-bottom: 0.8rem;
	letter-spacing: -0.02em;
}

.contact-subtitle {
	font-size: 1rem;
	color: #7c8f8f;
	margin-bottom: 1.5rem;
	max-width: 450px;
	margin-left: auto;
	margin-right: auto;
	line-height: 1.5;
}

.title-decoration {
	width: 80px;
	height: 4px;
	background: linear-gradient(90deg, #89b4fa 0%, #cba6f7 100%);
	margin: 0 auto;
	border-radius: 2px;
	position: relative;
}

.title-decoration::after {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, transparent 0%, #89b4fa 50%, transparent 100%);
	animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
	0%, 100% { transform: translateX(-100%); opacity: 0; }
	50% { transform: translateX(100%); opacity: 1; }
}

.contact-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
	gap: 1.5rem;
	margin-bottom: 2.5rem;
	max-width: 800px;
	margin-left: auto;
	margin-right: auto;
}

.contact-card {
	background: linear-gradient(135deg, #161b22 0%, #1c212b 100%);
	border: 1px solid rgba(137, 180, 250, 0.2);
	border-radius: 12px;
	padding: 1.8rem;
	text-align: center;
	position: relative;
	transition: all 0.3s ease;
	overflow: hidden;
	cursor: pointer;
}

.contact-card::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(135deg, rgba(137, 180, 250, 0.05) 0%, rgba(203, 166, 247, 0.05) 100%);
	opacity: 0;
	transition: opacity 0.4s ease;
}

.contact-card:hover {
	transform: translateY(-4px);
	border-color: rgba(137, 180, 250, 0.4);
	box-shadow: 0 8px 25px rgba(137, 180, 250, 0.12);
}

.contact-card:hover::before {
	opacity: 1;
}

.card-icon {
	width: 48px;
	height: 48px;
	margin: 0 auto 1rem;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 12px;
	background: linear-gradient(135deg, rgba(137, 180, 250, 0.1) 0%, rgba(203, 166, 247, 0.1) 100%);
	border: 1px solid rgba(137, 180, 250, 0.2);
	transition: all 0.3s ease;
}

.card-icon svg {
	width: 22px;
	height: 22px;
	color: #89b4fa;
	transition: all 0.3s ease;
}

.contact-card:hover .card-icon {
	background: linear-gradient(135deg, rgba(137, 180, 250, 0.2) 0%, rgba(203, 166, 247, 0.2) 100%);
	border-color: rgba(137, 180, 250, 0.4);
	transform: scale(1.05);
}

.contact-card:hover .card-icon svg {
	color: #cba6f7;
}

.card-title {
	font-size: 1.2rem;
	font-weight: 600;
	color: #e6edf3;
	margin-bottom: 0.4rem;
}

.card-subtitle {
	font-size: 0.9rem;
	color: #7c8f8f;
	margin-bottom: 1rem;
}

.contact-link {
	color: #89b4fa;
	text-decoration: none;
	font-weight: 500;
	font-size: 1rem;
	transition: all 0.3s ease;
	position: relative;
}

.contact-link::after {
	content: '';
	position: absolute;
	bottom: -2px;
	left: 0;
	width: 0;
	height: 2px;
	background: linear-gradient(90deg, #89b4fa 0%, #cba6f7 100%);
	transition: width 0.3s ease;
}

.contact-link:hover {
	color: #cba6f7;
}

.contact-link:hover::after {
	width: 100%;
}

/* Specific card styling */
.email-card:hover {
	box-shadow: 0 20px 40px rgba(137, 180, 250, 0.15), 0 0 30px rgba(137, 180, 250, 0.1);
}

.linkedin-card:hover {
	box-shadow: 0 20px 40px rgba(0, 119, 181, 0.15), 0 0 30px rgba(0, 119, 181, 0.1);
}

.github-card:hover {
	box-shadow: 0 20px 40px rgba(88, 166, 255, 0.15), 0 0 30px rgba(88, 166, 255, 0.1);
}

.resume-card:hover {
	box-shadow: 0 20px 40px rgba(249, 226, 175, 0.15), 0 0 30px rgba(249, 226, 175, 0.1);
}

.contact-footer {
	text-align: center;
	margin-top: 2rem;
}

.footer-text {
	font-size: 1rem;
	color: #a6adc8;
	margin-bottom: 1.5rem;
}

.cta-button {
	display: inline-block;
	position: relative;
	padding: 0.8rem 2rem;
	background: transparent;
	border: 2px solid #89b4fa;
	border-radius: 25px;
	color: #89b4fa;
	text-decoration: none;
	font-weight: 600;
	font-size: 1rem;
	transition: all 0.3s ease;
	overflow: hidden;
	text-transform: uppercase;
	letter-spacing: 0.3px;
}

.button-bg {
	position: absolute;
	top: 0;
	left: -100%;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, #89b4fa 0%, #cba6f7 100%);
	transition: left 0.3s ease;
	z-index: -1;
}

.button-text {
	position: relative;
	z-index: 1;
}

.cta-button:hover {
	color: #0d1117;
	border-color: #cba6f7;
	transform: translateY(-1px);
	box-shadow: 0 6px 20px rgba(137, 180, 250, 0.2);
}

.cta-button:hover .button-bg {
	left: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
	.contact-title {
		font-size: 2rem;
	}
	
	.contact-subtitle {
		font-size: 0.95rem;
	}
	
	.contact-grid {
		grid-template-columns: 1fr;
		gap: 1.2rem;
		margin-bottom: 2rem;
	}
	
	.contact-card {
		padding: 1.5rem;
	}
	
	.card-icon {
		width: 42px;
		height: 42px;
		margin-bottom: 0.8rem;
	}
	
	.card-icon svg {
		width: 20px;
		height: 20px;
	}
	
	.card-title {
		font-size: 1.1rem;
	}
	
	.footer-text {
		font-size: 0.95rem;
	}
	
	.cta-button {
		padding: 0.7rem 1.8rem;
		font-size: 0.95rem;
	}
}

@media (max-width: 480px) {
	.contact-title {
		font-size: 1.8rem;
	}
	
	.contact-subtitle {
		font-size: 0.9rem;
	}
	
	.contact-card {
		padding: 1.3rem;
	}
	
	.card-icon {
		width: 40px;
		height: 40px;
		margin-bottom: 0.7rem;
	}
	
	.card-icon svg {
		width: 18px;
		height: 18px;
	}
	
	.card-title {
		font-size: 1rem;
	}
	
	.card-subtitle {
		font-size: 0.85rem;
	}
	
	.contact-link {
		font-size: 0.85rem;
	}
	
	.footer-text {
		font-size: 0.9rem;
		margin-bottom: 1.2rem;
	}
	
	.cta-button {
		padding: 0.6rem 1.5rem;
		font-size: 0.9rem;
	}
}
</style>