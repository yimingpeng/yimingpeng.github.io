<style>
	.contact {
		background: linear-gradient(135deg, #0d1117 0%, #161b22 50%, #0d1117 100%);
		position: relative;
		overflow: hidden;
		padding: 3rem 0;
	}

	.contact::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(ellipse at center, rgba(137, 180, 250, 0.05) 0%, transparent 70%);
		pointer-events: none;
	}

	.contact-content {
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.contact-header {
		margin-bottom: 2rem;
	}

	.contact-title {
		font-size: 1.8rem;
		font-weight: 600;
		background: linear-gradient(135deg, #89b4fa 0%, #cba6f7 50%, #f9e2af 100%);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		color: #89b4fa;
		margin-bottom: 0.5rem;
		letter-spacing: -0.02em;
	}

	.contact-subtitle {
		font-size: 0.95rem;
		color: #7c8f8f;
		max-width: 400px;
		margin: 0 auto;
		line-height: 1.5;
	}

	.contact-links {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.contact-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-decoration: none;
		transition: all 0.3s ease;
		padding: 1rem;
		border-radius: 12px;
		background: rgba(30, 30, 46, 0.3);
		border: 1px solid rgba(137, 180, 250, 0.2);
		min-width: 80px;
	}

	.contact-item:hover {
		transform: translateY(-3px);
		border-color: rgba(137, 180, 250, 0.4);
		background: rgba(30, 30, 46, 0.5);
	}

	.contact-icon {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 10px;
		background: linear-gradient(135deg, rgba(137, 180, 250, 0.1) 0%, rgba(203, 166, 247, 0.1) 100%);
		border: 1px solid rgba(137, 180, 250, 0.2);
		transition: all 0.3s ease;
		margin-bottom: 0.5rem;
	}

	.contact-icon svg {
		width: 20px;
		height: 20px;
		color: #89b4fa;
		transition: all 0.3s ease;
	}

	.contact-item:hover .contact-icon {
		background: linear-gradient(135deg, rgba(137, 180, 250, 0.2) 0%, rgba(203, 166, 247, 0.2) 100%);
		border-color: rgba(137, 180, 250, 0.4);
		transform: scale(1.05);
	}

	.contact-item:hover .contact-icon svg {
		color: #cba6f7;
	}

	.contact-label {
		font-size: 0.85rem;
		font-weight: 500;
		color: #cdd6f4;
		transition: all 0.3s ease;
	}

	.contact-item:hover .contact-label {
		color: #89b4fa;
	}

	/* Specific item styling */
	.email-item:hover {
		box-shadow: 0 8px 20px rgba(137, 180, 250, 0.15);
	}

	.linkedin-item:hover {
		box-shadow: 0 8px 20px rgba(0, 119, 181, 0.15);
	}

	.github-item:hover {
		box-shadow: 0 8px 20px rgba(88, 166, 255, 0.15);
	}

	.resume-item:hover {
		box-shadow: 0 8px 20px rgba(249, 226, 175, 0.15);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.contact {
			padding: 2.5rem 0;
		}

		.contact-title {
			font-size: 1.6rem;
		}

		.contact-subtitle {
			font-size: 0.9rem;
		}

		.contact-links {
			gap: 1.5rem;
		}

		.contact-item {
			padding: 0.8rem;
			min-width: 70px;
		}

		.contact-icon {
			width: 36px;
			height: 36px;
		}

		.contact-icon svg {
			width: 18px;
			height: 18px;
		}

		.contact-label {
			font-size: 0.8rem;
		}
	}

	@media (max-width: 480px) {
		.contact {
			padding: 2rem 0;
		}

		.contact-title {
			font-size: 1.4rem;
		}

		.contact-subtitle {
			font-size: 0.85rem;
		}

		.contact-links {
			gap: 1rem;
		}

		.contact-item {
			padding: 0.7rem;
			min-width: 60px;
		}

		.contact-icon {
			width: 32px;
			height: 32px;
			margin-bottom: 0.4rem;
		}

		.contact-icon svg {
			width: 16px;
			height: 16px;
		}

		.contact-label {
			font-size: 0.75rem;
		}
	}
</style>
