---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Experience from '../components/Experience.astro';
---

<BaseLayout 
	title="Experience - Yiming Peng"
	description="Detailed work experience of Yiming Peng - Data Engineer/Data Architect/Software Engineer"
>
	<Header currentPage="experience" />
	<main class="experience-page">
		<div class="container">
			<div class="page-header">
				<h1 class="page-title">$ cat experience.txt</h1>
				<p class="page-subtitle">Detailed work experience and projects</p>
				<a href="/" class="back-link">‚Üê Back to home</a>
			</div>
			<Experience />
		</div>
	</main>
</BaseLayout>

<style>
.experience-page {
	padding-top: 120px;
	min-height: 100vh;
	background: linear-gradient(135deg, #181825 0%, #1e1e2e 50%, #181825 100%);
}

.page-header {
	text-align: center;
	margin-bottom: 3rem;
}

.page-title {
	font-family: 'JetBrains Mono', 'Fira Code', monospace;
	font-size: 2.5rem;
	color: #a6e3a1;
	margin-bottom: 1rem;
	font-weight: 500;
}

.page-subtitle {
	font-size: 1.2rem;
	color: #cdd6f4;
	opacity: 0.8;
	margin-bottom: 2rem;
}

.back-link {
	display: inline-block;
	color: #89b4fa;
	text-decoration: none;
	font-family: 'JetBrains Mono', 'Fira Code', monospace;
	font-size: 1rem;
	padding: 0.5rem 1rem;
	border: 1px solid rgba(137, 180, 250, 0.3);
	border-radius: 6px;
	transition: all 0.3s ease;
}

.back-link:hover {
	background: rgba(137, 180, 250, 0.1);
	border-color: #89b4fa;
}

/* Responsive Design */
@media (max-width: 768px) {
	.experience-page {
		padding-top: 100px;
	}
	
	.page-title {
		font-size: 2rem;
	}
	
	.page-subtitle {
		font-size: 1.1rem;
	}
}

@media (max-width: 480px) {
	.experience-page {
		padding-top: 80px;
	}
	
	.page-title {
		font-size: 1.5rem;
	}
	
	.page-subtitle {
		font-size: 1rem;
	}
}
</style>